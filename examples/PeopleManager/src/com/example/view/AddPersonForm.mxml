<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">

	<mx:Script>
		<![CDATA[
			protected function onSubmitClick( event:MouseEvent ):void
			{
				if( nameTxt.text != "" && ageTxt.text != "" )
				{
					dispatchEvent( new Event( "addPerson" ) );
				}
			}
			
			public function clear():void
			{
				nameTxt.text = "";
				ageTxt.text = "";
			}
		]]>
	</mx:Script>

	<mx:Form width="100%" height="100%">
		<mx:FormItem label="Name">
			<mx:TextInput id="nameTxt"/>
		</mx:FormItem>
		<mx:FormItem label="Age">
			<mx:TextInput id="ageTxt" restrict="[0-9]"/>
		</mx:FormItem>
		<mx:Button id="submit" label="submit" click="onSubmitClick(event)" />
	</mx:Form>
</mx:VBox>
