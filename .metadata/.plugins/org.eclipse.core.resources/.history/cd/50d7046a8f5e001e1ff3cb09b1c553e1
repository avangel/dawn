<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="vertical" minWidth="1024" minHeight="768"
	creationComplete="init();" 
	xmlns:ziazoo="uk.co.ziazoo.*" 
	xmlns:view="com.example.view.*" 
	xmlns:model="com.example.model.*"
	backgroundColor="0xffffff">
	
	<mx:Script>
		<![CDATA[
			import com.example.view.PersonDetails;
			import com.example.view.PersonList;
			import com.example.commands.ICommand;
			import com.example.commands.SetupAppCommand;
			import uk.co.ziazoo.injector.IBuilder;
			import uk.co.ziazoo.injector.ReflectionParser;

			private function init():void
			{
				var builder:IBuilder = new ReflectionParser( new Config() );
				
				addChild( builder.getObject( PersonList ) as DisplayObject );
				addChild( builder.getObject( PersonDetails ) as DisplayObject );
				
				var command:ICommand = builder.getObject( SetupAppCommand ) as ICommand;
				command.execute();
			}
			
		]]>
	</mx:Script>
	
</mx:Application>
